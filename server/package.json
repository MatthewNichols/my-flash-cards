{
  "name": "flash-cards-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "export $(cat .env | grep -v '^#' | xargs) && psql $DATABASE_URL -f ./migrations/001_initial_schema.sql",
    "db:seed": "export $(cat .env | grep -v '^#' | xargs) && psql $DATABASE_URL -f ./migrations/seed.sql"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.7.4",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.30.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
